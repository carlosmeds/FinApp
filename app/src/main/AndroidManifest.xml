<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufpr.tads.finapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinApp">
        <activity android:name=".activity.ClassificationActivity"></activity>
        <activity android:name=".activity.StatementActivity" />
        <activity android:name=".activity.SearchTransaction" />
        <activity android:name=".activity.AddTransactionActivity" />
        <activity android:name=".activity.DashboardActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>